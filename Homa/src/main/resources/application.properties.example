# ---------------------------------------
# 游깷 CONFIGURACI칍N GENERAL
# ---------------------------------------
spring.application.name=Homa
server.port=8080

# ---------------------------------------
#  CONFIGURACI칍N BASE DE DATOS MARIADB
# ---------------------------------------
spring.datasource.url=jdbc:mariadb://localhost:3306/homa_avanzada_db?allowPublicKeyRetrieval=true&useSSL=false
spring.datasource.username=root
spring.datasource.password=TU_PASSWORD_AQUI
spring.datasource.driver-class-name=org.mariadb.jdbc.Driver

# Propiedades de JPA / Hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MariaDBDialect
spring.jpa.properties.hibernate.format_sql=true

# ---------------------------------------
# 游닂 SWAGGER / OPENAPI
# ---------------------------------------
springdoc.api-docs.path=/v3/api-docs
springdoc.paths-to-match=/api/**
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.operationsSorter=method
springdoc.swagger-ui.tagsSorter=alpha
springdoc.swagger-ui.tryItOutEnabled=true
springdoc.swagger-ui.doc-expansion=none
springdoc.swagger-ui.filter=true
springdoc.swagger-ui.default-model-expand-depth=1
springdoc.swagger-ui.default-models-expand-depth=1
springdoc.swagger-ui.display-request-duration=true

# URLs para OpenAPI
openapi.dev-url=http://localhost:8080
openapi.prod-url=https://api.homa.edu.co

# ---------------------------------------
# 游댏 JWT CONFIGURACI칍N
# ---------------------------------------
jwt.secret=TU_SECRET_KEY_AQUI_DEBE_SER_LARGO_Y_SEGURO
jwt.expiration=3600000

# ---------------------------------------
# 游닓 CORREO ELECTR칍NICO (SMTP GMAIL)
# ---------------------------------------
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=tu_email@gmail.com
spring.mail.password=tu_app_password_aqui
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
app.frontend.url=${FRONTEND_BASE_URL:http://localhost:4200}
app.backend.url=${BACKEND_BASE_URL:http://localhost:8080}

# ---------------------------------------
#  MAPBOX CONFIGURACI칍N
# ---------------------------------------
mapbox.access-token=TU_TOKEN_MAPBOX_AQUI

# ---------------------------------------
#  CLOUDINARY CONFIGURACI칍N
# ---------------------------------------
# Obt칠n tus credenciales en https://console.cloudinary.com/
cloudinary.cloud-name=tu_cloud_name
cloudinary.api-key=tu_api_key
cloudinary.api-secret=tu_api_secret
cloudinary.folder=alojamientos

# ---------------------------------------
# 游닋 CONFIGURACI칍N DE CARGA DE ARCHIVOS
# ---------------------------------------
# Tama침o m치ximo de archivo individual (10MB)
spring.servlet.multipart.max-file-size=10MB
# Tama침o m치ximo de toda la petici칩n (10MB)
spring.servlet.multipart.max-request-size=10MB
# Habilitar soporte multipart
spring.servlet.multipart.enabled=true
